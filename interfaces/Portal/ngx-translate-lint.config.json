{
  "tsconfig": "./",
  "project": "./src/app/**/*.{html,ts}",
  "languages": "./src/assets/i18n/*.json",
  "rules": {
    "keysOnViews": "warning",
    "zombieKeys": "error",
    "misprintKeys": "warning",
    "emptyKeys": "warning",
    "deepSearch": "enable",
    "maxWarning": "0",
    "ignoredKeys": [
      "_dir"
    ],
    "ignoredMisprintKeys": []
  }
}
